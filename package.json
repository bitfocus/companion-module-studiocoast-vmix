{
	"name": "studiocoast-vmix",
	"version": "3.6.4",
	"main": "dist/index.js",
	"scripts": {
		"dev": "yarn build:watch",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"build:test": "tsc -p tsconfig.build.json --noEmit",
		"lint": "eslint . --ext .ts --fix",
		"lint:test": "eslint . --ext .ts",
		"test": "jest"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-studiocoast-vmix.git"
	},
	"lint-staged": {
		"*.{js,json,md}": [
			"prettier --write",
			"git add"
		],
		"*.{ts}": [
			"yarn lint --fix --",
			"git add"
		]
	},
	"eslintIgnore": [
		"/tests/*.test.ts"
	],
	"license": "MIT",
	"dependencies": {
		"@companion-module/base": "~1.8.0",
		"companion-module-utils": "^0.4.0",
		"lodash": "~4.17.21",
		"xml2js": "~0.5.0"
	},
	"devDependencies": {
		"@companion-module/tools": "~1.4.1",
		"@types/jest": "^29.5.12",
		"@types/lodash": "~4.14.190",
		"@types/node": "~18.13.0",
		"@types/xml2js": "~0.4.11",
		"@typescript-eslint/eslint-plugin": "~5.51.0",
		"@typescript-eslint/parser": "~5.51.0",
		"eslint": "~8.33.0",
		"eslint-config-prettier": "~8.6.0",
		"eslint-plugin-prettier": "~4.2.1",
		"husky": "~8.0.3",
		"jest": "^29.7.0",
		"lint-staged": "~13.1.1",
		"prettier": "~2.8.4",
		"rimraf": "~3.0.2",
		"ts-jest": "^29.1.2",
		"typescript": "~4.9.5"
	}
}
